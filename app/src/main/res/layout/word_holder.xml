<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingLeft="@dimen/dimen_default"
                android:paddingRight="@dimen/dimen_default"
                android:paddingTop="@dimen/dimen_default">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginRight="@dimen/dimen_default"
        android:id="@+id/num_text_view"/>

    <TextView
        android:id="@+id/word_text_view"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/num_text_view"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_default"
        android:layout_marginLeft="@dimen/dimen_default"
        android:layout_toLeftOf="@+id/delete_image_view"
        android:textColor="@android:color/black"
        android:text="asad"/>

    <ImageView
        android:id="@+id/delete_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_delete_black_24dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/delete_image_view"
        android:layout_marginTop="@dimen/dimen_default"
        android:layout_marginLeft="@dimen/dimen_default"
        android:layout_marginRight="@dimen/dimen_default"/>

</RelativeLayout>